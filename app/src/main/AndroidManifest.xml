<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kcwl.kht.tzkppda">

    <application
        android:name=".application.TZKPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".functionmodule.Splash.ActivitySplash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".functionmodule.Login.ActivityLogin"
            android:screenOrientation="portrait" />

        <activity
            android:name=".functionmodule.SelectBusiness.ActivitySelectBusiness"
            android:screenOrientation="portrait" />
        <activity
            android:name=".functionmodule.Setting.ActivitySetting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uhf.UHFConnectFailedDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DialogTransparentTheme" />
        <activity
            android:name=".functionmodule.Homepage.ActivityHomepage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".functionmodule.ScanElectronicLicensePlate.ActivityScanResult"
            android:screenOrientation="portrait" />
        <activity
            android:name=".functionmodule.Query.ActivityQuery"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />
    </application>


    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>